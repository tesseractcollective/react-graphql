{
  "extends": "./tsconfig-base.json",

  "compilerOptions": {
    "jsx": "react-native",
    "paths": {
      "hooks": [
        "hooks"
      ],
      "support": [
        "support"
      ],
      "components": [
        "components"
      ],
      "types": [
        "types"
      ]      
    },
  },
  "include": [
    "src/components/shared/*.{ts|tsx|js|jsx}",
    "src/components/native/*.{ts|tsx|js|jsx}",
    "src/hooks/*.{ts|tsx|js|jsx}",
    "src/support/*.{ts|tsx|js|jsx}",
    "src/types/*.{ts|tsx|js|jsx}",
    "src/index.ts"
  ],
}
