{
  "compilerOptions": {
    "outDir": "dist/",
    "target": "ES5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2020"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "typeRoots": [
      "types/**/*.d.ts",
      "types/**/*.ts",
      "node_modules/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "hooks": [
        "hooks"
      ],
      "support": [
        "support"
      ],
      "components": [
        "components"
      ],
      "types": [
        "types"
      ]
    },
    "sourceMap": true,
    "inlineSources": true
  },
  "include": [
    "src/components/shared/*.{ts|tsx|js|jsx}",
    "src/hooks/*.{ts|tsx|js|jsx}",
    "src/support/*.{ts|tsx|js|jsx}",
    "src/types/*.{ts|tsx|js|jsx}",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "src/stories"
  ]
}
