{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "jsx": "react",
    "paths": {
      "hooks": [
        "hooks"
      ],
      "support": [
        "support"
      ],
      "components": [
        "components"
      ],
      "types": [
        "types"
      ],
      "react-native": ["./node_modules/react-native-web"]
    }
  },
  "include": [
    "src/components/shared/*.{ts|tsx|js|jsx}",
    "src/components/web/*.{ts|tsx|js|jsx}",
    "src/hooks/*.{ts|tsx|js|jsx}",
    "src/support/*.{ts|tsx|js|jsx}",
    "src/types/*.{ts|tsx|js|jsx}",
    "src/index.ts"
  ],
}
